<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.kodi.navidrome" name="Navidrome Kodi Repository" version="1.0.0" provider-name="Your Name">
    <extension point="xbmc.addon.repository" name="Navidrome Kodi Repository">
        <info compressed="false">https://raw.githubusercontent.com/abalajiksh/plugin.kodi.navidrome.releases/main/zips/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/abalajiksh/plugin.kodi.navidrome.releases/main/zips/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/abalajiksh/plugin.kodi.navidrome.releases/main/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Navidrome music server integration for Kodi</summary>
        <description lang="en">Repository for Navidrome Kodi addon with automatic updates</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>


<addon id="plugin.kodi.navidrome"
       name="Navidrome"
       version="0.5.5"
       provider-name="colinfredynand">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>audio</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Navidrome music plugin</summary>
        <description lang="en_GB">Browse and play music from Navidrome with scrobbling support</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
</addons>
